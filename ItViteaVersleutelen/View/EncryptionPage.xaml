<UserControl x:Class="ItViteaVersleutelen.View.EncryptionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItViteaVersleutelen.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    
    <Grid Margin="10">
        <DockPanel>
     
            <StackPanel DockPanel.Dock="Right">
                <Button Content="Menu" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Click="Button_Click"/>
            </StackPanel>

            <Grid DockPanel.Dock="Right"  BindingGroup="{Binding EncryptionClass}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox  TextWrapping="Wrap" Text="{Binding InputText}"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding OutputText}" Grid.Row="1"/>
            </Grid>
           

        </DockPanel>
    </Grid>
</UserControl>
